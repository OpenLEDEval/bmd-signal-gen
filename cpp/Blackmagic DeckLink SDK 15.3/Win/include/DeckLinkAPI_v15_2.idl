// Forward Declarations

interface IDeckLinkAncillaryPacket_v15_2;
interface IDeckLinkAncillaryPacketIterator_v15_2;
interface IDeckLinkVideoFrameAncillaryPackets_v15_2;

/* Interface IDeckLinkAncillaryPacket_v15_2 - On output, user needs to implement this interface */

[
    object,
    uuid(CC5BBF7E-029C-4D3B-9158-6000EF5E3670),
    helpstring("On output, user needs to implement this interface")
] interface IDeckLinkAncillaryPacket_v15_2 : IUnknown
{
    HRESULT GetBytes ([in] BMDAncillaryPacketFormat format /* For output, only one format need be offered */, [out] const void** data /* Optional */, [out] unsigned int* size /* Optional */);
    unsigned char GetDID (void);
    unsigned char GetSDID (void);
    unsigned int GetLineNumber (void);	// On output, zero is auto
    unsigned char GetDataStreamIndex (void);	// Usually zero. Can only be 1 if non-SD and the first data stream is completely full
};

/* Interface IDeckLinkAncillaryPacketIterator_v15_2 - Enumerates ancillary packets */

[
    object,
    uuid(3FC8994B-88FB-4C17-968F-9AAB69D964A7),
    helpstring("Enumerates ancillary packets")
] interface IDeckLinkAncillaryPacketIterator_v15_2 : IUnknown
{
    HRESULT Next ([out] IDeckLinkAncillaryPacket_v15_2** packet);
};

/* Interface IDeckLinkVideoFrameAncillaryPackets_v15_2 - Obtained through QueryInterface on an IDeckLinkVideoFrame object. */

[
    object,
    uuid(6C186C0F-459E-41D8-AEE2-4812D81AEE68),
    local,
    helpstring("Obtained through QueryInterface on an IDeckLinkVideoFrame object.")
] interface IDeckLinkVideoFrameAncillaryPackets_v15_2 : IUnknown
{
    HRESULT GetPacketIterator ([out] IDeckLinkAncillaryPacketIterator_v15_2** iterator);
    HRESULT GetFirstPacketByID ([in] unsigned char DID, [in] unsigned char SDID, [out] IDeckLinkAncillaryPacket_v15_2** packet);
    HRESULT AttachPacket ([in] IDeckLinkAncillaryPacket_v15_2* packet);	// Implement IDeckLinkAncillaryPacket_v15_2 to output your own
    HRESULT DetachPacket ([in] IDeckLinkAncillaryPacket_v15_2* packet);
    HRESULT DetachAllPackets (void);
};

